   /* MULTIPLE BACKGROUNDS */
  background-image: 
    url('../images/fond-R.png'),     /* image finale : la maison */
    url('../images/fond-R.jpg'); /* pattern répétitif : ciel et nuages */
  
  background-repeat: 
    no-repeat,  /* la maison ne se répète pas */
    repeat;     /* le pattern se répète */
  
  background-position: 
    bottom center,  /* la maison en bas au centre */
    top left;       /* le pattern commence en haut à gauche */
  
  background-size: 
    auto,           /* la maison garde sa taille originale */
    auto;           /* le pattern garde sa taille originale */
  
  flex-direction: column;